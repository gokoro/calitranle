{
  "name": "calitranle",
  "description": "A tool for translating a calibre-created epub file ðŸ“–",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/app.js",
  "bin": "dist/app.js",
  "scripts": {
    "start": "ts-node-esm --transpileOnly --swc src/app.ts",
    "build:source": "tsc -p tsconfig.json",
    "build:package": "pnpm bundle && pkg bundle/app.cjs --public --targets linux,macos,win --out-path packaged && rimraf bundle",
    "bundle": "esbuild src/app.ts --bundle --platform=node --format=cjs --minify --outfile=./bundle/cjs/app.cjs"
  },
  "devDependencies": {
    "@swc/core": "^1.3.41",
    "@types/async-retry": "^1.4.5",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.14.2",
    "esbuild": "^0.17.11",
    "openai-api": "^1.3.1",
    "pkg": "^5.8.1",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@epubly/core": "^0.2.1",
    "async-retry": "^1.3.3",
    "got": "^12.6.0",
    "inquirer": "^9.2.0",
    "p-queue": "^7.3.4"
  },
  "files": [
    "./dist/**/*"
  ]
}
