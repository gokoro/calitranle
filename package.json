{
  "name": "calitranle",
  "description": "A tool for translating a calibre-created epub file ðŸ“–",
  "version": "0.0.7",
  "type": "module",
  "main": "dist/app.js",
  "bin": "dist/app.js",
  "scripts": {
    "start": "ts-node-esm --transpileOnly --swc src/app.ts",
    "build:source": "tsc -p tsconfig.build.json",
    "build:package": "pnpm bundle && pkg bundle/app.cjs --public --targets linux,macos,win --out-path packaged && rimraf bundle",
    "bundle": "esbuild src/app.ts --bundle --platform=node --format=cjs --minify --outfile=./bundle/cjs/app.cjs"
  },
  "devDependencies": {
    "@swc/core": "^1.3.41",
    "@types/async-retry": "^1.4.5",
    "@types/node": "^18.14.2",
    "esbuild": "^0.17.11",
    "pkg": "^5.8.1",
    "rimraf": "^4.4.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "commander": "^10.0.0",
    "deepl-node": "^1.8.0",
    "mkdirp": "^2.1.5",
    "playwright": "^1.31.2",
    "puppeteer": "^19.7.2",
    "ts-node": "^10.9.1"
  }
}