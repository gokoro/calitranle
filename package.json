{
  "name": "translate-clibre-html",
  "type": "module",
  "scripts": {
    "start": "pnpm build:source && node dist/app.js",
    "build": "swc ./src -d dist",
    "build:source": "swc ./src -d dist",
    "build:package": "pnpm bundle && pkg bundle/app.cjs --targets linux,macos,win --out-path packaged && rimraf ./bundle",
    "bundle": "esbuild src/app.ts --bundle --platform=node --format=cjs --minify --outfile=./bundle/app.cjs"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.39",
    "@types/async-retry": "^1.4.5",
    "@types/node": "^18.14.2",
    "esbuild": "^0.17.11",
    "pkg": "^5.8.1",
    "rimraf": "^4.4.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "commander": "^10.0.0",
    "deepl-node": "^1.8.0",
    "mkdirp": "^2.1.5",
    "playwright": "^1.31.2",
    "puppeteer": "^19.7.2"
  }
}